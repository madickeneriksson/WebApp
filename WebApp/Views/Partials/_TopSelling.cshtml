@model GridCollectionViewModel

@{
    ViewData["Title"] = "Produkter";
    var products = await productService.GetAllAsync();
}
@if (Model != null)
{
    <section class="top-selling">
        <div class="container-fluid">
            @if (!string.IsNullOrEmpty(Model.Title))
            {
                <h1 class="title">@Model.Title</h1>
            }

            @if (Model.Categories != null)
            {
                <ul class="categories">
                    @foreach (var category in Model.Categories)
                    {
                        <li class="category-item">@category</li>
                    }
                </ul>

            }
            @if (Model.Products != null)
            {
                <div class="collection-grid">
                    @foreach (var item in Model.Products)
                    {
                        <partial name="/Views/Partials/_GridCollectionItem.cshtml" model="item" />
                    }
                </div>
            }

            @if (Model.LoadMore)
            {
                <div class="load-more">
                    <button class="btn-outline-white me-1"><i class="fa-solid fa-chevron-left"></i></button>
                    <button class="btn-outline-white ms-1"><i class="fa-solid fa-chevron-right"></i></button>
                </div>
            }

        </div>
    </section>
}





































