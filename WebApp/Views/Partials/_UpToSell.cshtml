@model GridCollectionViewModel
@{
    ViewData["Title"] = "Produkter";
    var products = await productService.GetAllAsync();
}
﻿<section class="up-to-sell">
    <div class="container">
        <div class="collection-grid">
            <div class="item-1">
                @if (Model.Products != null)
                {
                    <div class="grid">
                        @foreach (var productViewModel in Model.Products.Take(1))
                        {
                        <partial name="/Views/Partials/_CollectionContentItem.cshtml" model="productViewModel" />
                        }
                    </div>
                }
            </div>
            <div class="discover">
                <div class="collection-content">
                    <div class="container">
                        <div class="title-red">UP TO SELL</div>
                        <div class="title">50% OFF</div>
                        <div class="ingress">Get the Best Price</div>
                        <div class="text">Get the best daily offer et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren no sea taki</div>
                        <a href="#" class="link">Discover More</a>
                    </div>
                </div>
            </div>
            <div class="item-2">
                @if (Model.Products != null)
                {
                    <div class="grid">
                        @foreach (var productViewModel in Model.Products.Skip(1).Take(1))
                        {
                        <partial name="/Views/Partials/_CollectionContentItem.cshtml" model="productViewModel" />
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>
