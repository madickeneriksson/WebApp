@model RegisterViewModel
@{ ViewData["Title"] = "Registrera nytt konto";}

<section class="contact-form">
    <div class="container">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        

        <form asp-action="Register" metod="post" novalidate>
            <div class="form-group">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="error"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="error"></span>
            </div>
             <div class="form-group">
                <label asp-for="StreetName" class="form-label"></label>
                <input asp-for="StreetName" class="form-control">
                <span asp-validation-for="StreetName" class="error"></span>
            </div>
             <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="error"></span>
            </div>
             <div class="form-group">
                <label asp-for="PostalCode" class="form-label"></label>
                <input asp-for="PostalCode" class="form-control">
                <span asp-validation-for="PostalCode" class="error"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control">
                <span asp-validation-for="City" class="error"></span>
            </div>

            <button type="submit" class="btn-theme">REGISTRERA</button>
        </form>
    </div>
</section>