@model LoginViewModel
@{
    ViewData["Title"] = "Logga in";
}

<section class="login-form">
    <div class="container">
        <div class="title">@ViewData["Title"] </div>
        <form asp-action="Index" metod="post" novalidate asp-route-ReturnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="form-group error"></div>
            <div class="email form-group">
                <label asp-for="Email" class="form-label">Email*
                    <a class="error" asp-controller="Register" asp-action="Index">Registrera ny användare</a>
                </label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="error"></span>
            </div>
            <div class="password form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="error"></span>
            </div>
            <div class="rememberme terms form-checkbox-group">
                <label class="custom-checkbox">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe">
                    <span class="checkmark"></span>
                </label>
            </div>
            <button class="btn-theme">LOGGA IN</button>
            
        </form> 
    </div>
</section>
