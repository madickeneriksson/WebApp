@model WebApp.Models.dto.Product

<a asp-controller="products" asp-action="details" asp-route-id="@Model.ArticleNumber" class="collection-content-item">
    <img src="~/images/placeholders/@Model.ImageUrl" alt="@Model.Name">
<div class="body">
    <div class="title">@Model.Name</div>
    <div class="info">
        <div class="price">@Model.Price</div>
        <i class="add-cart fa-regular fa-cart-plus"></i>
    </div>
</div>
 </a>
